@using ClassLibraryDAL
@using ClassLibraryEntities
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
        @foreach (var emp in @FilterDepartmentList)
        {


            <div class="col-md-12 mb-4">
                <div class="card text-white bg-secondary">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3>@emp.DegreeName</h3>

                            </div>

                            <div>
                                <button class="btn btn-danger " @onclick="e=>FutureS(emp.ProgramDegreeId)">Future Scope</button>

                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4">

                                <div class="col mt-2">
                                    <h5>Duration  <span class="text-primary">@emp.Duration </span></h5>
                                </div>
                                <div class="col mt-2">
                                    <h5>TotalSem  <span class="text-primary">@emp.TotalSemesters</span></h5>
                                </div>
                                <div class="col mt-2">
                                    <h5>Matric  <span class="text-primary">@emp.Matric </span></h5>
                                </div>
                                <div class="col mt-2">
                                    <h5>FSC  <span class="text-primary">@emp.FSC </span></h5>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="col mt-2">
                                    <h5>TotalFee  <span class="text-primary">@emp.TotalFee </span></h5>
                                </div>
                                <div class="col mt-2">
                                    <h5>SemFee  <span class="text-primary">@emp.SemesterFee </span></h5>
                                </div>
                                <div class="col mt-2">
                                    <h5>ClosingMerit  <span class="text-primary">@emp.ClosingMerit </span></h5>
                                </div>




                            </div>


                        </div>
                    </div>
                </div>
            </div>

        }
        </div>
        <div class="col-md-4">
            @if (check)
            {


                <div class="container-fluid">
                    <div class="row">
                        @foreach (var emp in FutureScopeList)
                        {
                            <div class="col-12">
                                <div class="card bg-secondary  text-white">
                                    <div class="card-body">
                                        @((MarkupString)emp.Description)





                                    </div>
                                </div>
                            </div>


                        }

                    </div>
                </div>
            }
        </div>
    </div>
</div>



@code {
    public bool check { get; set; } = false;
    [Parameter] public string insid { get; set; }
    [Parameter] public string PDSGID { get; set; }
    [Parameter]
    public List<EntProgramDegreeDetails>? FilterDepartmentList { get; set; }
    public List<EntFutureScope>? FutureScopeList { get; set; }

    public void FutureS(string id)
    {
        FutureScopeList = DALFutureScope.GetFutureScopeById(id);
        check = true;
    }

}
